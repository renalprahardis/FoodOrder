<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login3"
    tools:context="id.project.materialintroscreen.MaterialIntroActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="368dp"
        android:layout_height="344dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="16dp">


        <Button
            android:id="@+id/btn_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/background_btn1"
            android:ems="20"
            android:text="LOG IN"
            android:textColor="@color/colorAccent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="6dp"
                android:src="@drawable/ic_phone_white_24dp"
                />
        <EditText
            android:id="@+id/log_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/COLO"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:textSize="17dp"
            android:ems="16"
            android:hint="No Handphone"
            android:maxLines="1"
            android:padding="8dp"
            android:inputType="numberDecimal"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="126dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="210dp"
            android:orientation="horizontal"
            >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="7dp"
            android:src="@drawable/lock"
            />

        <EditText
            android:id="@+id/log_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button1"
            android:layout_alignLeft="@+id/editText"
            android:layout_alignStart="@+id/editText"
            android:layout_marginBottom="49dp"

            android:ems="17"
            android:maxLines="1"
            android:padding="8dp"
            android:textSize="17dp"
            android:hint="Password"
            android:inputType="textPassword"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="183dp" />

        </LinearLayout>


    </RelativeLayout>

    <Button
        android:id="@+id/btn_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        android:background="@drawable/background_btn2"
        android:ems="20"
        android:text="sign up"
        android:textColor="@color/putih" />


</RelativeLayout>
